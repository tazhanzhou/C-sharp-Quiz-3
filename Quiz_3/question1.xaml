<Window x:Class="Quiz_3.question1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quiz_3"
        mc:Ignorable="d"
        Title="question1" Height="300" Width="500">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Height="220" Margin="21,20,21,0" VerticalAlignment="Top" Width="400">
            <Label Margin="10,0,10,0" FontWeight="Bold" Content="Id"/>
            <TextBox Margin="10,0,10,0" x:Name="tbxId" Height="23" TextWrapping="Wrap"/>
            <Label Margin="10,0,10,0" FontWeight="Bold" Content="First Name"/>
            <TextBox Margin="10,0,10,0" x:Name="tbxFName" Height="23" TextWrapping="Wrap"/>
            <Label Margin="10,0,10,0" FontWeight="Bold" Content="Last Name"/>
            <TextBox Margin="10,0,10,0" x:Name="tbxLName" Height="23" TextWrapping="Wrap"/>
            <CheckBox Margin="10,0,10,0" x:Name="Checkregisterd" Content="Registerd"/>
            <Button x:Name="btnSave" Margin="20" Content="Save" Click="btnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>
